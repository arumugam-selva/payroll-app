entity Employee {
	id Integer,
	org Organization,
	status String required
}
entity EmployeeDetails {
    id Integer,
    email String,
    name String,
    designation String,
    department Integer,
    dob LocalDate,
    joiningDate LocalDate,
    panNo String,
    bankAccountNo String,
    gender String,
    bank String,
    location String
}
entity EmployeeEarning {
    id Integer,
    effectiveDate LocalDate required,
    basic Long,
    hra Long,
    conveyance Long,
    leaveEncash Long,
    specialAllowance Long,
    reimbursement Long
}
entity EmployeeDeductions {
    id Integer,
    effectiveDate LocalDate required,
    pf Long,
    profTax Long,
    incomeTax Long,
    lop Long
}
entity EmployeeTimeSheet {
    id Integer required,
    month Integer required minlength(1) maxlength(12),
    year Integer required minlength(2016) maxlength(3000),
    noOfWorkingDays Long,
    noOfLeavs Long,
    noOfLop Long,
    noOfArearDays Long
}
relationship ManyToOne {
	EmployeeDetails{employeeId} to Employee,
    EmployeeEarning{employeeId} to Employee,
    EmployeeDeductions{employeeId} to Employee,
    EmployeeTimeSheet{employeeId} to Employee,
}

enum Organization {
    GQ,BZ
}
// Set pagination options
paginate Employee, EmployeeDetails, EmployeeEarning,EmployeeDeductions ,EmployeeTimeSheet  with infinite-scroll

// Use Data Transfert Objects (DTO)
// dto * with mapstruct

// Set service options to all except few
service all with serviceImpl

